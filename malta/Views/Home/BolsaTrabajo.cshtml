@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Bolsa de Trabajo";
}
<section id="nosotros-header">
    <div class="row">
        <div class="large-8 medium-8 columns">
            <div class="frase">
                <h2>¿Quieres trabajar con nosotros?</h2>
            </div>
        </div>
        <div class="large-4 medium-4 columns text-right">
            <p><a href="http://intranet.maltacleyton.com.mx/login.php" class="button" style="margin-top:2rem;" target="_blank">Recursos Humanos</a></p>
        </div>
    </div>
</section>
<section id="contacto">
    <div class="row">
        <div class="large-10 medium-10 columns">
            <div class="frase">

                <p><div id="error"></div></p>
            </div>
            <!--  ----------------------------------------------------------------------  -->
            <!--  NOTA: Agregue el siguiente <META> elemento a su página <HEAD>.  Si es   -->
